<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000"
    android:orientation="vertical"
    tools:context=".view.MainActivity">


    <RelativeLayout
        android:layout_width="1200px"
        android:layout_height="730px"
        android:layout_marginLeft="365px"
        android:layout_marginTop="120px"
        android:background="@mipmap/bg_baoxianxiang"
        android:gravity="center"
        android:text="Loading..."
        android:textColor="@color/colorWhite"
        android:textSize="30px">


    </RelativeLayout>


    <TextView
        android:id="@+id/close"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="1455px"
        android:layout_marginTop="120px"
        android:background="@null"
        android:gravity="center_vertical"
        android:maxLength="14" />


    <EditText
        android:background="@null"
        android:layout_marginRight="700px"
        android:layout_marginLeft="700px"
        android:layout_marginTop="460px"
        android:layout_width="match_parent"
        android:layout_height="80px" />

</RelativeLayout>