<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000"
    android:orientation="vertical"
    tools:context=".view.MainActivity">


    <RelativeLayout
        android:layout_width="1412px"
        android:layout_height="880px"
        android:layout_marginLeft="250px"
        android:layout_marginTop="100px"
        android:background="@mipmap/bg_gerenxxk"
        android:orientation="vertical"
        android:text="Loading..."
        android:textColor="@color/colorWhite"
        android:textSize="30px">


    </RelativeLayout>


    <TextView
        android:id="@+id/close"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="1580px"
        android:layout_marginTop="106px"

        android:gravity="center_vertical"
        android:maxLength="14" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="560px"
        android:layout_marginTop="364px"
        android:gravity="center"
        android:text="原  密  码"
        android:textColor="@color/colorTextWhite"
        android:textSize="32px" />

    <EditText
        android:inputType="textPassword"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:id="@+id/old_pwd"
        android:hint="请输入原密码"
        android:layout_width="600px"
        android:layout_height="82px"
        android:layout_marginLeft="740px"
        android:layout_marginTop="340px"
        android:background="@mipmap/shurumm"
        android:maxLength="10"
        android:paddingLeft="15px"
        android:text=""
        android:textColor="@color/colorTextWhite"
        android:textColorHint="@color/text_hint_color"
        android:textSize="32px" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="560px"
        android:layout_marginTop="484px"
        android:gravity="center"
        android:text="新  密  码"
        android:textColor="@color/colorTextWhite"
        android:textSize="32px" />

    <EditText
        android:inputType="textPassword"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:id="@+id/new_pwd"
        android:hint="请输入新密码"
        android:layout_width="600px"
        android:layout_height="82px"
        android:layout_marginLeft="740px"
        android:layout_marginTop="460px"
        android:background="@mipmap/shurumm"
        android:maxLength="10"
        android:paddingLeft="15px"
        android:text=""
        android:textColor="@color/colorTextWhite"
        android:textColorHint="@color/text_hint_color"
        android:textSize="32px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="560px"
        android:layout_marginTop="600px"
        android:gravity="center"
        android:text="确认密码"
        android:textColor="@color/colorTextWhite"
        android:textSize="32px" />

    <EditText
        android:inputType="textPassword"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:id="@+id/again_new_pwd"
        android:hint="请再次输入新密码"
        android:layout_width="600px"
        android:layout_height="82px"
        android:layout_marginLeft="740px"
        android:layout_marginTop="580px"
        android:background="@mipmap/shurumm"
        android:maxLength="10"
        android:paddingLeft="15px"
        android:text=""
        android:textColor="@color/colorTextWhite"
        android:textColorHint="@color/text_hint_color"
        android:textSize="32px" />


    <Button
        android:id="@+id/loginout"
        android:layout_width="285px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="740px"
        android:background="@mipmap/yes"
        android:gravity="center"
        android:text="确认提交" />


</RelativeLayout>