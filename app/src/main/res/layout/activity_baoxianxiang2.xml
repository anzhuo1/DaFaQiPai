<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000"
    android:orientation="vertical"
    tools:context=".view.MainActivity">


    <RelativeLayout
        android:layout_width="1412px"
        android:layout_height="880px"
        android:layout_marginLeft="250px"
        android:layout_marginTop="100px"
        android:background="@mipmap/bg_bxxkk"
        android:orientation="vertical"
        android:text="Loading..."
        android:textColor="@color/colorWhite"
        android:textSize="30px">

    </RelativeLayout>


    <TextView
        android:id="@+id/close"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="1555px"
        android:layout_marginTop="100px"
        android:background="@mipmap/cha"
        android:gravity="center_vertical"
        android:maxLength="14" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="560px"
        android:layout_marginTop="300px"
        android:gravity="center"
        android:text="亲爱的玩家，您是首次使用保险箱，请设定保险箱密码！"
        android:textColor="@color/colorTextWhite"
        android:textSize="32px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="560px"
        android:layout_marginTop="450px"
        android:gravity="center"
        android:text="请输入密码"
        android:textColor="@color/colorTextWhite"
        android:textSize="32px" />


    <EditText
        android:id="@+id/mm"
        android:hint="请输入您的密码"
        android:layout_width="600px"
        android:layout_height="82px"
        android:layout_marginLeft="560px"
        android:layout_marginTop="510px"
        android:background="@mipmap/shurumm"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="15px"
        android:text=""
        android:textColor="@color/colorTextWhite"
        android:textColorHint="@color/text_hint_color"
        android:textSize="32px" />


    <TextView
        android:id="@+id/miss"
        android:layout_width="180px"
        android:layout_height="82px"
        android:layout_marginLeft="1210px"
        android:layout_marginTop="510px"
        android:background="@mipmap/wangjimm"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/colorTextWhite"
        android:textSize="32px" />


    <Button
        android:id="@+id/ok"
        android:layout_width="285px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="710px"
        android:background="@mipmap/yes"
        android:gravity="center"
        android:text="确认提交" />


</RelativeLayout>